//- Incorporate default page layout
extends layout.pug

//- edit page title
block title
    title= "Wikipedia Graph Visualizer"

block style
    link(rel="stylesheet" href="/css/main.css")

block scripts
    script(src="/js/bundle.js")

//- insert page content
block content
    .container-full-width
        //-.row
        //-    .col-pp-100
        //-        h3(class="text-center title")= "Wikipedia Graph Visualizer"
        div(class="row form-params")
            .col-pp-100
                form(action="/query" method="POST")
                .form-part
                    div(class="col-pp-100 col-tl-40")
                        input(type="text" id="w-page" name="w-page" placeholder="Wikipedia Title Page" autofocus)
                .form-part
                    div(class="col-pp-100 col-tl-20")
                        input(type="datetime-local" id="start" name="start")
                .form-part
                    div(class="col-pp-100 col-tl-20")
                        button(class="button button-default button-full-width h4" type="submit")= "Visualize"
    .container-full-width
        .row
            div(class="col-pp-100 canvas" id="graph-container")